@page "/experience"
@using Web.Components.Components;
@using Web.Models;
@using Web.Helper

<PageTitle>Justin Urbanek - Erfahrung</PageTitle>

<HeroBanner Title="Meine Erfahrung"
            SubTitle="Meine bisherigen Stationen und Erfahrungen."
            HasButton="false"
            IsBigView="false" />

<Timeline TimelineItems=@TimelineItems />

@code {
  private List<TimelineItem> TimelineItems { get; set; } = default!;

  protected override void OnInitialized() {
    base.OnInitialized();

    TimelineItems = TimelineItemHelper.GetTimelineItems();
  }
}