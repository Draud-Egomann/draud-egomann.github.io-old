@page "/sources"
@using Web.Components.Components
@using Web.Models
@using Web.Services
@inject IJSRuntime JSRuntime
@inject MockData MockData

<HeroBanner Title=@pageTitle
            SubTitle=@pageSubTitle
            HasButton="false"
            IsBigView="false" />

<CreditImages SourceImgs=@SourceImages />

<CreditIcons Icons=@Icons />

<CreditCards Cards=@ContactCards />

<CreditCards Cards=@HobbiesCards />

<DividerText Text=@dividerText />

@code {
  private string pageTitle;
  private string pageSubTitle;
  private List<SourceImage> SourceImages;
  private List<SourceIcon> Icons;
  private List<SourceCard> ContactCards;
  private List<SourceCard> HobbiesCards;
  private string dividerText = "";

  protected override void OnInitialized() {
    base.OnInitialized();

    CultureService.SetCulture(CultureService.CurrentCulture);

    pageTitle = "Quellenverzeichnis";
    pageSubTitle = "Ja, ich verlinke Quellen!";

    SourceImages = MockData.GetSourceImages();
    Icons = MockData.GetSourceIcons();
    ContactCards = MockData.GetContactSourceCards();
    HobbiesCards = MockData.GetHobbiesSourceCards();
  }

  private async Task NavigateToUrl(string url) {
    await JSRuntime.InvokeVoidAsync("window.open", url, "_blank");
  }
}
