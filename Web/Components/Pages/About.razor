@page "/about"
@using Web.Components.Components;
@using Web.Helper
@using Web.Models
@inject NavigationManager NavigationManager

<PageTitle>Justin Urbanek - Über mich</PageTitle>

<HeroBanner Title="Leidenschaftlicher Tastaturakrobat"
            SubTitle="Mit Begeisterung für moderne Technologien und innovative Lösungen"
            HasButton="false"
            IsBigView="false" />

<ContentGrid2 Title="Über mich"
              Paragraph="Ich bin Justin Urbanek und lebe seit 15 Jahren in der malerischen Schweiz. In dieser Zeit habe ich viele wertvolle Erfahrungen gesammelt und mich stetig weiterentwickelt. Derzeit absolviere ich meine Ausbildung bei der Kauz Informatik Medien AG und dem BBZW Sursee, wo ich mich intensiv mit den neuesten Technologien und Medien auseinandersetze. Mein Engagement und meine Lernbereitschaft prägen meinen Weg, und ich freue mich darauf, meine Fähigkeiten weiter auszubauen und neue Herausforderungen anzunehmen."
              Images=@Images />

<TextCarousel Title="Ich verwende"
  CarouselWords=@CarouselWords
  ButtonText="Meine Projekte ansehen"
  OnClick=NavigateToProjects />

<ContentGrid3 Title="Meine Freizeitaktivitäten"
              Images=@MediaImages />

@code {
  private List<HorizontalGalleryImage> Images { get; set; } = default!;
  private List<CarouselWord> CarouselWords { get; set; } = default!;
  private List<MediaImage> MediaImages { get; set; } = default!;

  protected override void OnInitialized() {
    base.OnInitialized();

    Images = HorizontalGalleryImageHelper.GetGalleryImages();
    CarouselWords = CarouselWordHelper.GetCarouselWords();
    MediaImages = MediaImageHelper.GetMediaImages();
  }

  private void NavigateToProjects() {
    NavigationManager.NavigateTo("/projects");
  }
}