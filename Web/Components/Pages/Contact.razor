@page "/contact"
@using Microsoft.Extensions.Localization
@using Web.Components.Components
@using Web.Components.Components.Cards
@using Web.Models
@using Web.Services
@inject DataProvider DataProvider
@inject IStringLocalizer<Contact> Localizer

<PageTitle>Justin Urbanek - @Title</PageTitle>

<HeroBanner Title=@Title
            SubTitle=@SubTitle
            HasButton="false"
            IsBigView="false" />

<Cards2 Class="py-16" Cards=@ContactCards />

@code {
  private string Title { get; set; }
  private string SubTitle { get; set; }
  private List<MediaItem> ContactCards { get; set; } = default!;

  protected override void OnInitialized() {
    base.OnInitialized();

    CultureService.SetCulture(CultureService.CurrentCulture);

    Title = Localizer["PageTitle"];
    SubTitle = Localizer["PageSubTitle"];

    ContactCards = DataProvider.GetContactCards();
  }
}