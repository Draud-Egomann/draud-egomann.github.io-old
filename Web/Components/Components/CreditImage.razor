@using Web.Models

<div class="w-1/3 @(Class)">
  <img src="@SourceImg.ImageUrl" alt="@SourceImg.AltText" class="mx-auto" />

  <p class="text-white">
    Bild von
    @if (@SourceImg.ProfileUrl != null) {
      <a href=@SourceImg.ProfileUrl target="_blank" rel="nofollow">
        @SourceImg.ProfileName
      </a>
      <span>auf </span>
    }
    <a href=@SourceImg.SiteUrl target="_blank" rel="nofollow">
      @SourceImg.SiteName
    </a>
  </p>
</div>

@code {
  [Parameter]
  public string Class { get; set; } = string.Empty;

  [Parameter]
  [EditorRequired]
  public SourceImage SourceImg { get; set; } = default!;

  protected override void OnInitialized() {
    base.OnInitialized();
  }
}
