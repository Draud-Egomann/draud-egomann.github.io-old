@using Web.Models

<div class="w-full relative own-bg-primary @(Class)">
  <div class="container flex flex-wrap justify-center items-center gap-8 py-12">

    @foreach (var sourceImage in SourceImgs) {
      <ReferenceImage SourceImg=@sourceImage />
    }

  </div>
</div>

@code {
  [Parameter]
  public string Class { get; set; } = string.Empty;

  [Parameter]
  [EditorRequired]
  public List<ImageReference> SourceImgs { get; set; } = default!;

  protected override void OnInitialized() {
    base.OnInitialized();
  }
}
